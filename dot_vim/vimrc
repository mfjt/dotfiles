set hlsearch
set ignorecase
set noswapfile
set smartcase
set undofile

nnoremap <silent> <Esc><Esc> :nohlsearch<CR>
nnoremap j gj
nnoremap k gk
inoremap jj <Esc>

set cursorline
set listchars=eol:↲,tab:»·,trail:·,extends:»,precedes:«,nbsp:%
set list
set relativenumber
set smartindent

syntax enable
set termguicolors
filetype plugin indent on

" https://github.com/microsoft/WSL/issues/4440#issuecomment-2032529622
let s:clip = '/mnt/c/Windows/System32/clip.exe'
if executable(s:clip)
  augroup WSLYank
    autocmd!
    autocmd TextYankPost * if v:event.operator ==# 'y' | call system(s:clip, @0) | endif
  augroup END
else
  set clipboard=unnamedplus
endif
